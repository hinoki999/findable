# JWT Configuration
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=30

# Database Configuration
# Local development uses SQLite by default (no DATABASE_URL needed)
# For production (Railway), set this to PostgreSQL connection string:
# DATABASE_URL=postgresql://user:password@host:port/database

# SendGrid Email Configuration (Optional - for email verification)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@droplinkconnect.com

# Cloudinary Configuration (Optional - for profile photo uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Server Configuration
# PORT=8081
# HOST=0.0.0.0

# Session Activity Timeout Configuration
ACTIVITY_TIMEOUT_MINUTES=30  # Standard inactivity timeout (default: 30 minutes)
REMEMBER_ME_TIMEOUT_DAYS=30  # Extended timeout for "Remember Me" (default: 30 days)
